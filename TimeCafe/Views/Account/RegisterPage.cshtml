@using TimeCafe.DAL.Models.ViewModels
@model RegisterViewModel
<div class="container">
  <div class="row">
      <div class="col-md">
      </div>
      <div class="col-md-auto">
          <div class="card" style="width: 15rem;">
              <h5 class="card-title text-center">Sing Up</h5>
          <form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>
    </div>    
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirmation"></label><br />
        <input asp-for="PasswordConfirmation" />
        <span asp-validation-for="PasswordConfirmation"></span>
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Sign Up"/>
    </div>
</form>
        </div>
      </div>
      <div class="col-md">
      </div>
  </div>
</div>